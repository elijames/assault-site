---
import Layout from '../layouts/Layout.astro';
import FlipbookAnimation from '../components/organisms/FlipbookAnimation.astro';
import Nav from '../components/organisms/Nav.astro';
import { TabSection } from '../components/organisms/TabSection';

// SEO metadata for the homepage
const seoData = {
	title: "Assault Media Marketing",
	description: "Full-service marketing agency specializing in developing and evolving the whole experience to grow your business.",
	slug: "/",
	featuredImage: "/featured-image.jpg"
};
---

<Layout 
	title={seoData.title}
	description={seoData.description}
	slug={seoData.slug}
	featuredImage={seoData.featuredImage}
>
<Nav />
	<main class="container mx-auto px-4 py-8 space-y-12">
		<!-- Flipbook Overlay -->
		<div id="flipbook-overlay" class="fixed inset-0 z-50 bg-white dark:bg-[#404040] flex items-center justify-center">
			<div class="w-full max-w-4xl h-[400px]">
				<FlipbookAnimation duration={1.5} />
			</div>
		</div>

		<style>
			@keyframes fadeOut {
				from {
					opacity: 1;
				}
				to {
					opacity: 0;
				}
			}

			.fade-out {
				animation: fadeOut 1s ease-out forwards;
			}
		</style>

		<script>
			// Wait for flipbook animation to complete before fading out
			setTimeout(() => {
				const overlay = document.getElementById('flipbook-overlay');
				if (overlay) {
					overlay.classList.add('fade-out');
					// Remove overlay from DOM after animation completes
					setTimeout(() => overlay.remove(), 1000);
				}
			}, 1500); // flipbook duration
		</script>
		<section id="approach" class="py-12">
			<h2 class="text-3xl font-bold mb-8">Our Approach</h2>
			<TabSection client:load tabs={[
				{
					title: "Curate the experience",
					content: "We begin with a deep dive into your business, understanding your goals, challenges, and unique value proposition. Our discovery phase sets the foundation for a successful partnership and ensures our strategy aligns perfectly with your objectives.",
					image: "dino-final.png"
				},
				{
					title: "Engage with your audience",
					content: "Based on our discoveries, we develop a comprehensive strategy that combines creative excellence with data-driven insights. Our strategic approach ensures every decision moves you closer to your business goals.",
					image: "dino-final.png"
				},
				{
					title: "Grow and evolve",
					content: "With a solid strategy in place, our team brings your vision to life through expert execution. We maintain clear communication throughout the process, ensuring every deliverable meets our high standards and your expectations.",
					image: "dino-final.png"
				}
			]} />
		</section>
		<section id="team">
			<h2>Our Team</h2>
		</section>
		<section id="work-with-us">
			<h2>Work with us</h2>
		</section>
		<!-- Real-world Examples -->
		<section class="space-y-8">
			<h2 class="font-primary font-bold text-3xl mb-8">Typography Examples</h2>
			
			<!-- Typography System Examples -->
			<div class="space-y-8">
				<!-- Headlines -->
				<div class="space-y-4">
					<h1>Main Headline in Montserrat Bold Uppercase (2rem)</h1>
					<h2>Section Title in Jost Bold (1.5rem)</h2>
					<h3>Subsection Heading in Jost Bold (1.25rem)</h3>
					<h4>Minor Heading in Jost Bold (1rem)</h4>
					<h5>Small Heading in Jost Bold (.75rem)</h5>
					<h6>Smallest Heading in Jost Bold (.5rem)</h6>
				</div>

				<!-- Body Text Examples -->
				<div class="space-y-8">
					<!-- Paragraph Text -->
					<div class="space-y-4">
						<p>
							This is a standard paragraph using Jost Regular. Our typography system uses Jost 
							for all body text elements to maintain consistency and readability across the site. 
							The quick brown fox jumps over the lazy dog.
						</p>
						<p class="italic">
							This is an emphasized paragraph in italic. Notice how the Jost font maintains 
							its clarity and elegance in italic form.
						</p>
					</div>

					<!-- Lists -->
					<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
						<div>
							<h4 class="mb-2">Unordered List:</h4>
							<ul class="list-disc list-inside space-y-1">
								<li>First list item in Jost Regular</li>
								<li>Second list item with <span class="italic">italic emphasis</span></li>
								<li>Third list item example</li>
							</ul>
						</div>
						<div>
							<h4 class="mb-2">Ordered List:</h4>
							<ol class="list-decimal list-inside space-y-1">
								<li>First numbered item in Jost Regular</li>
								<li>Second numbered item with <span class="italic">italic emphasis</span></li>
								<li>Third numbered item example</li>
							</ol>
						</div>
					</div>

					<!-- Blockquote -->
					<blockquote class="border-l-4 border-primary-500 pl-4 italic">
						This is a blockquote using Jost Regular in italic style. It demonstrates how our 
						typography system handles quoted content with elegance and clarity.
					</blockquote>

					<!-- Interactive Elements -->
					<div class="space-y-2">
						<label for="example-input">Form Label in Jost Regular:</label>
						<input 
							type="text" 
							id="example-input"
							placeholder="Input text uses Jost Regular"
							class="block w-full border rounded px-3 py-2"
						/>
					</div>
				</div>
			</div>
		</section>
	</main>
</Layout>
