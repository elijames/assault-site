---
import '../styles/globals.css';
import SEO from '../components/organisms/SEO.astro';

interface Props {
	title: string;
	description: string;
	slug: string;
	featuredImage?: string;
}

const { 
	title = "Astro Basics",
	description = "A basic Astro site",
	slug = Astro.url.pathname,
	featuredImage
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<SEO 
		title={title}
		description={description}
		slug={slug}
		featuredImage={featuredImage}
	/>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
